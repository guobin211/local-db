  "productName": "local-db",
  "version": "0.1.0",
  "identifier": "com.guobin.local-db",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "local-db",
        "width": 1048,
        "height": 680,
        "minWidth": 800,
        "minHeight": 600,
        "visible": true,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
